  <handler name="OnClose" parameters="" return="any"/>
  <handler name="scaleAndMaintainAspectRatioTransform" parameters="in Rectangle,in Rectangle,in Rectangle" return="Transform"/>
  <handler name="calculateRotatedPath" parameters="inout Path,in number,in Point,in boolean" return="any"/>
