  <property name="currentRotation" get="number" set="number"/>
  <property name="frequency" get="number" set="number"/>
  <property name="iconStyle" get="string" set="string"/>
  <property name="iconSVGPath" get="string" set="string"/>
  <property name="iconColor" get="string" set="string"/>
  <property name="iconOrigin" get="string" set="string"/>
  <property name="iconSize" get="number" set="number"/>
